{% comment %}
  Enhanced Footer section for NüHome theme
  Features: Comprehensive links, winter theme, trust elements, social proof
{% endcomment %}

<footer class="footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <!-- Background Elements -->
  <div class="footer__background">
    <div class="footer__pattern"></div>
    <div class="footer__snowflakes">
      <div class="footer__snowflake">❄️</div>
      <div class="footer__snowflake">✨</div>
      <div class="footer__snowflake">❄️</div>
    </div>
  </div>

  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer__content">
      <!-- Brand Section -->
      <div class="footer__brand">
        <div class="footer__logo">
          {% if section.settings.logo != blank %}
            <img 
              src="{{ section.settings.logo | image_url: width: 180 }}"
              alt="{{ shop.name }}"
              width="180"
              height="60"
              loading="lazy">
          {% else %}
            <h3 class="footer__logo-text">NüH❄️me</h3>
          {% endif %}
        </div>
        
        {% if section.settings.description != blank %}
          <p class="footer__description">{{ section.settings.description }}</p>
        {% endif %}

        <!-- Trust Badges -->
        <div class="footer__trust-badges">
          <div class="footer__trust-badge">
            <span class="footer__trust-icon">🚚</span>
            <span class="footer__trust-text">Free 2-Day Shipping</span>
          </div>
          <div class="footer__trust-badge">
            <span class="footer__trust-icon">🛡️</span>
            <span class="footer__trust-text">1-Year Warranty</span>
          </div>
          <div class="footer__trust-badge">
            <span class="footer__trust-icon">🔄</span>
            <span class="footer__trust-text">30-Day Returns</span>
          </div>
        </div>

        {% if section.settings.show_social %}
          <div class="footer__social">
            <p class="footer__social-title">Follow us ❄️</p>
            <div class="footer__social-links">
              {% if settings.social_instagram != blank %}
                <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram">
                  <span class="footer__social-icon">📷</span>
                  <span class="footer__social-platform">Instagram</span>
                </a>
              {% endif %}
              
              {% if settings.social_tiktok != blank %}
                <a href="{{ settings.social_tiktok }}" class="footer__social-link" aria-label="TikTok">
                  <span class="footer__social-icon">🎵</span>
                  <span class="footer__social-platform">TikTok</span>
                </a>
              {% endif %}
              
              {% if settings.social_twitter != blank %}
                <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="X (Twitter)">
                  <span class="footer__social-icon">🐦</span>
                  <span class="footer__social-platform">Twitter</span>
                </a>
              {% endif %}
              
              {% if settings.social_pinterest != blank %}
                <a href="{{ settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest">
                  <span class="footer__social-icon">📌</span>
                  <span class="footer__social-platform">Pinterest</span>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Quick Links -->
      <div class="footer__links">
        <h4 class="footer__links-title">Shop</h4>
        <ul class="footer__links-list">
          <li><a href="/collections/ice-makers" class="footer__link">Ice Makers</a></li>
          <li><a href="/collections/bestsellers" class="footer__link">Bestsellers</a></li>
          <li><a href="/collections/new-arrivals" class="footer__link">New Arrivals</a></li>
          <li><a href="/collections/sale" class="footer__link">Sale Items</a></li>
          <li><a href="/collections/accessories" class="footer__link">Accessories</a></li>
        </ul>
      </div>

      <!-- Support Links -->
      <div class="footer__links">
        <h4 class="footer__links-title">Support</h4>
        <ul class="footer__links-list">
          <li><a href="/pages/contact" class="footer__link">Contact Us</a></li>
          <li><a href="/pages/shipping-info" class="footer__link">Shipping Info</a></li>
          <li><a href="/pages/returns" class="footer__link">Returns & Exchanges</a></li>
          <li><a href="/pages/warranty" class="footer__link">Warranty</a></li>
          <li><a href="/pages/faq" class="footer__link">FAQ</a></li>
          <li><a href="/pages/track-order" class="footer__link">Track Your Order</a></li>
        </ul>
      </div>

      <!-- Company Info -->
      <div class="footer__company">
        <h4 class="footer__company-title">Company</h4>
        <ul class="footer__company-list">
          <li><a href="/pages/about" class="footer__link">About NüHome</a></li>
          <li><a href="/pages/careers" class="footer__link">Careers</a></li>
          <li><a href="/pages/press" class="footer__link">Press & Media</a></li>
          <li><a href="/pages/affiliate" class="footer__link">Affiliate Program</a></li>
          <li><a href="/pages/wholesale" class="footer__link">Wholesale</a></li>
        </ul>
      </div>

      <!-- Contact & Newsletter -->
      <div class="footer__contact">
        <h4 class="footer__contact-title">Get in Touch</h4>
        <div class="footer__contact-info">
          <div class="footer__contact-item">
            <span class="footer__contact-icon">📧</span>
            <div class="footer__contact-details">
              <span class="footer__contact-label">Email</span>
              <a href="mailto:hello@nuhome.com" class="footer__contact-link">hello@nuhome.com</a>
            </div>
          </div>
          
          <div class="footer__contact-item">
            <span class="footer__contact-icon">📞</span>
            <div class="footer__contact-details">
              <span class="footer__contact-label">Phone</span>
              <a href="tel:+15551234567" class="footer__contact-link">+1 (555) 123-4567</a>
            </div>
          </div>
          
          <div class="footer__contact-item">
            <span class="footer__contact-icon">🕒</span>
            <div class="footer__contact-details">
              <span class="footer__contact-label">Hours</span>
              <span class="footer__contact-text">Mon-Fri 9AM-6PM EST</span>
            </div>
          </div>
        </div>

        <!-- Quick Newsletter -->
        <div class="footer__newsletter">
          <p class="footer__newsletter-title">Stay Cool! 🧊</p>
          <p class="footer__newsletter-text">Get exclusive deals & ice-cold tips</p>
          <form class="footer__newsletter-form" action="/contact" method="post">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer__newsletter-input-group">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Your email"
                class="footer__newsletter-input"
                required>
              <button type="submit" class="footer__newsletter-submit">
                <span class="footer__newsletter-submit-icon">→</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <!-- Copyright & Legal -->
        <div class="footer__legal">
          <p class="footer__copyright">
            © {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
          </p>
          <div class="footer__legal-links">
            <a href="/pages/privacy-policy" class="footer__legal-link">Privacy Policy</a>
            <a href="/pages/terms-of-service" class="footer__legal-link">Terms of Service</a>
            <a href="/pages/refund-policy" class="footer__legal-link">Refund Policy</a>
          </div>
        </div>

        <!-- Payment & Security -->
        <div class="footer__payment-section">
          {% if section.settings.show_payment_icons %}
            <div class="footer__payment">
              <span class="footer__payment-text">Secure Payment</span>
              <div class="footer__payment-icons">
                <div class="footer__payment-icon footer__payment-icon--visa">
                  <span>💳</span>
                </div>
                <div class="footer__payment-icon footer__payment-icon--mastercard">
                  <span>💳</span>
                </div>
                <div class="footer__payment-icon footer__payment-icon--amex">
                  <span>💳</span>
                </div>
                <div class="footer__payment-icon footer__payment-icon--paypal">
                  <span>🏦</span>
                </div>
                <div class="footer__payment-icon footer__payment-icon--apple">
                  <span>📱</span>
                </div>
                <div class="footer__payment-icon footer__payment-icon--google">
                  <span>🌐</span>
                </div>
              </div>
            </div>
          {% endif %}

          <!-- Security Badges -->
          <div class="footer__security">
            <div class="footer__security-badge">
              <span class="footer__security-icon">🔒</span>
              <span class="footer__security-text">SSL Secured</span>
            </div>
            <div class="footer__security-badge">
              <span class="footer__security-icon">✅</span>
              <span class="footer__security-text">Verified Store</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Final Brand Statement -->
      <div class="footer__brand-statement">
        <p class="footer__brand-statement-text">
          ❄️ Crafted with care for the modern kitchen • Designed for wellness • Built to last ❄️
        </p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Brand Settings"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Brand Description",
      "default": "Premium ice-cold kitchen appliances designed for wellness, efficiency, and the modern lifestyle. Transform your kitchen experience with NüHome."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social media links"
    },
    {
      "type": "header",
      "content": "Payment & Security"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    }
  ]
}
{% endschema %}

<style>
.footer {
  position: relative;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
  color: white;
  padding: 80px 0 0;
  overflow: hidden;
}

/* Background Elements */
.footer__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.footer__pattern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 30%, rgba(74, 144, 226, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(135, 206, 235, 0.05) 0%, transparent 50%);
}

.footer__snowflakes {
  position: absolute;
  width: 100%;
  height: 100%;
}

.footer__snowflake {
  position: absolute;
  font-size: 12px;
  opacity: 0.1;
  animation: footer-snowfall 30s linear infinite;
}

.footer__snowflake:nth-child(1) {
  left: 15%;
  animation-delay: 0s;
}

.footer__snowflake:nth-child(2) {
  left: 50%;
  animation-delay: 10s;
}

.footer__snowflake:nth-child(3) {
  left: 85%;
  animation-delay: 20s;
}

/* Main Content */
.footer__content {
  position: relative;
  z-index: 2;
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr 1fr 1.2fr;
  gap: 40px;
  margin-bottom: 60px;
}

/* Brand Section */
.footer__brand {
  max-width: 320px;
}

.footer__logo {
  margin-bottom: 24px;
}

.footer__logo-text {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 2rem;
  font-weight: 800;
  background: linear-gradient(135deg, #4A90E2 0%, #87CEEB 50%, #F0F8FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
  animation: text-shimmer 4s ease-in-out infinite;
}

.footer__description {
  color: #bbb;
  line-height: 1.6;
  font-size: 14px;
  margin-bottom: 24px;
}

/* Trust Badges */
.footer__trust-badges {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 24px;
}

.footer__trust-badge {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(74, 144, 226, 0.1);
  padding: 8px 12px;
  border-radius: 12px;
  border: 1px solid rgba(74, 144, 226, 0.2);
  transition: all 0.3s ease;
}

.footer__trust-badge:hover {
  background: rgba(74, 144, 226, 0.15);
  transform: translateX(5px);
}

.footer__trust-icon {
  font-size: 14px;
  color: #4A90E2;
}

.footer__trust-text {
  font-size: 12px;
  color: #ddd;
  font-weight: 600;
}

/* Social Media */
.footer__social {
  margin-top: 24px;
}

.footer__social-title {
  font-size: 14px;
  font-weight: 600;
  color: #ddd;
  margin-bottom: 16px;
}

.footer__social-links {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.footer__social-link {
  display: flex;
  align-items: center;
  gap: 12px;
  color: #bbb;
  text-decoration: none;
  padding: 8px 12px;
  border-radius: 12px;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.footer__social-link:hover {
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
  transform: translateX(5px);
}

.footer__social-icon {
  font-size: 16px;
}

.footer__social-platform {
  font-size: 14px;
  font-weight: 500;
}

/* Links Sections */
.footer__links,
.footer__company {
  display: flex;
  flex-direction: column;
}

.footer__links-title,
.footer__company-title {
  font-size: 16px;
  font-weight: 700;
  color: white;
  margin-bottom: 20px;
  padding-bottom: 8px;
  border-bottom: 2px solid rgba(74, 144, 226, 0.3);
  position: relative;
}

.footer__links-title::after,
.footer__company-title::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 30px;
  height: 2px;
  background: linear-gradient(90deg, #4A90E2 0%, #87CEEB 100%);
}

.footer__links-list,
.footer__company-list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin: 0;
  padding: 0;
}

.footer__link {
  color: #bbb;
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 4px 0;
  position: relative;
}

.footer__link::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: linear-gradient(90deg, #4A90E2 0%, #87CEEB 100%);
  transition: width 0.3s ease;
}

.footer__link:hover {
  color: #4A90E2;
  transform: translateX(5px);
}

.footer__link:hover::before {
  width: 100%;
}

/* Contact Section */
.footer__contact {
  display: flex;
  flex-direction: column;
}

.footer__contact-title {
  font-size: 16px;
  font-weight: 700;
  color: white;
  margin-bottom: 20px;
  padding-bottom: 8px;
  border-bottom: 2px solid rgba(74, 144, 226, 0.3);
  position: relative;
}

.footer__contact-title::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 30px;
  height: 2px;
  background: linear-gradient(90deg, #4A90E2 0%, #87CEEB 100%);
}

.footer__contact-info {
  margin-bottom: 24px;
}

.footer__contact-item {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 16px;
  padding: 8px 0;
}

.footer__contact-icon {
  font-size: 16px;
  color: #4A90E2;
  margin-top: 2px;
}

.footer__contact-details {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.footer__contact-label {
  font-size: 12px;
  color: #888;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.footer__contact-link {
  color: #ddd;
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: color 0.3s ease;
}

.footer__contact-link:hover {
  color: #4A90E2;
}

.footer__contact-text {
  color: #bbb;
  font-size: 14px;
  font-weight: 500;
}

/* Newsletter */
.footer__newsletter {
  background: rgba(74, 144, 226, 0.1);
  padding: 20px;
  border-radius: 16px;
  border: 1px solid rgba(74, 144, 226, 0.2);
  margin-top: 20px;
}

.footer__newsletter-title {
  font-size: 16px;
  font-weight: 700;
  color: white;
  margin-bottom: 4px;
}

.footer__newsletter-text {
  font-size: 12px;
  color: #bbb;
  margin-bottom: 16px;
}

.footer__newsletter-input-group {
  display: flex;
  gap: 8px;
}

.footer__newsletter-input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.05);
  color: white;
  font-size: 14px;
}

.footer__newsletter-input::placeholder {
  color: #888;
}

.footer__newsletter-input:focus {
  outline: none;
  border-color: #4A90E2;
  background: rgba(255, 255, 255, 0.1);
}

.footer__newsletter-submit {
  padding: 10px 12px;
  background: linear-gradient(135deg, #4A90E2 0%, #2171B5 100%);
  border: none;
  border-radius: 8px;
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
}

.footer__newsletter-submit:hover {
  background: linear-gradient(135deg, #2171B5 0%, #4A90E2 100%);
  transform: translateY(-2px);
}

.footer__newsletter-submit-icon {
  font-size: 14px;
}

/* Bottom Section */
.footer__bottom {
  position: relative;
  z-index: 2;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 40px 0 20px;
}

.footer__bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 40px;
  margin-bottom: 30px;
}

/* Legal */
.footer__legal {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.footer__copyright {
  color: #888;
  font-size: 14px;
  font-weight: 500;
}

.footer__legal-links {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.footer__legal-link {
  color: #bbb;
  text-decoration: none;
  font-size: 12px;
  font-weight: 500;
  transition: color 0.3s ease;
}

.footer__legal-link:hover {
  color: #4A90E2;
}

/* Payment Section */
.footer__payment-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16px;
}

.footer__payment {
  display: flex;
  align-items: center;
  gap: 16px;
}

.footer__payment-text {
  color: #888;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.footer__payment-icons {
  display: flex;
  gap: 8px;
}

.footer__payment-icon {
  width: 32px;
  height: 20px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.footer__payment-icon:hover {
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-2px);
}

.footer__payment-icon span {
  font-size: 12px;
}

/* Security */
.footer__security {
  display: flex;
  gap: 16px;
}

.footer__security-badge {
  display: flex;
  align-items: center;
  gap: 6px;
  background: rgba(16, 185, 129, 0.1);
  padding: 6px 12px;
  border-radius: 12px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.footer__security-icon {
  font-size: 12px;
  color: #10B981;
}

.footer__security-text {
  font-size: 10px;
  color: #ddd;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Brand Statement */
.footer__brand-statement {
  text-align: center;
  padding: 20px 0;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.footer__brand-statement-text {
  color: #666;
  font-size: 12px;
  font-weight: 500;
  line-height: 1.5;
  font-style: italic;
}

/* Animations */
@keyframes footer-snowfall {
  0% {
    transform: translateY(-100vh) rotate(0deg);
    opacity: 0.1;
  }
  10% {
    opacity: 0.2;
  }
  90% {
    opacity: 0.1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

@keyframes text-shimmer {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.3); }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .footer__content {
    grid-template-columns: 1fr 1fr 1fr;
    gap: 32px;
  }
  
  .footer__brand {
    grid-column: 1 / -1;
    max-width: none;
    text-align: center;
  }
  
  .footer__trust-badges {
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .footer__social-links {
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
  }
}

@media (max-width: 768px) {
  .footer {
    padding: 60px 0 0;
  }
  
  .footer__content {
    grid-template-columns: 1fr;
    gap: 40px;
    text-align: center;
  }
  
  .footer__brand {
    grid-column: auto;
  }
  
  .footer__bottom-content {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 24px;
  }
  
  .footer__payment-section {
    align-items: center;
  }
  
  .footer__legal-links {
    justify-content: center;
  }
  
  .footer__security {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .footer {
    padding: 40px 0 0;
  }
  
  .footer__content {
    gap: 32px;
