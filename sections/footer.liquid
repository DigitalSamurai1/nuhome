{% comment %}
  Footer section for NüHome theme
  Features: Links, social media, payment icons
{% endcomment %}

<footer class="footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="container">
    <div class="footer__content">
      <!-- Brand Section -->
      <div class="footer__brand">
        <div class="footer__logo">
          {% if section.settings.logo != blank %}
            <img 
              src="{{ section.settings.logo | image_url: width: 150 }}"
              alt="{{ shop.name }}"
              width="150"
              height="50">
          {% else %}
            <h3 class="footer__logo-text">{{ shop.name }}</h3>
          {% endif %}
        </div>
        
        {% if section.settings.description != blank %}
          <p class="footer__description">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.show_social %}
          <div class="footer__social">
            {% if settings.social_instagram != blank %}
              <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram">
