      const claimModalToggle = document.querySelector('[data-claim-modal-toggle]');
      const claimModalClose = document.querySelectorAll('[data-claim-modal-close]');
      const claimForm = document.querySelector('[data-claim-form]');
      
      // Open modal
      if (claimModalToggle) {
        claimModalToggle.addEventListener('click', function(e) {
          e.preventDefault();
          claimModal.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      }
      
      // Close modal
      claimModalClose.forEach(function(closeBtn) {
        closeBtn.addEventListener('click', function() {
          claimModal.classList.remove('active');
          document.body.style.overflow = '';
        });
      });
      
      // Close modal on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && claimModal.classList.contains('active')) {
          claimModal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
      
      // Handle form submission
      if (claimForm) {
        claimForm.addEventListener('submit', function(e) {
          e.preventDefault();
          
          const submitBtn = claimForm.querySelector('.claim-form__btn--primary');
          const btnText = submitBtn.querySelector('.claim-form__btn-text');
          const btnLoading = submitBtn.querySelector('.claim-form__btn-loading');
          
          // Show loading state
          submitBtn.disabled = true;
          btnText.style.display = 'none';
          btnLoading.style.display = 'flex';
          
          // Get form data
          const formData = new FormData(claimForm);
          
          // Submit form using fetch
          fetch('/contact', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json',
            }
          })
          .then(response => {
            if (response.ok) {
              // Show success message
              showMessage('Thank you! Your claim has been submitted successfully. We will get back to you soon.', 'success');
              claimForm.reset();
            } else {
              throw new Error('Submission failed');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            showMessage('Sorry, there was an error submitting your claim. Please try again or contact us directly.', 'error');
          })
          .finally(() => {
            // Reset button state
            submitBtn.disabled = false;
            btnText.style.display = 'inline';
            btnLoading.style.display = 'none';
          });
        });
      }
      
      // Function to show messages
      function showMessage(message, type) {
        // Remove existing messages
        const existingMessage = claimForm.querySelector('.claim-form__message');
        if (existingMessage) {
          existingMessage.remove();
        }
        
        // Create new message
        const messageDiv = document.createElement('div');
        messageDiv.className = `claim-form__message claim-form__message--${type}`;
        messageDiv.textContent = message;
        
        // Insert at the top of the form
        claimForm.insertBefore(messageDiv, claimForm.firstChild);
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
          if (messageDiv.parentNode) {
            messageDiv.remove();
          }
        }, 5000);
      }

      // Cart Modal Functionality
      const cartModal = document.querySelector('[data-cart-modal]');
      const cartModalToggle = document.querySelector('[data-cart-modal-toggle]');
      const cartModalClose = document.querySelectorAll('[data-cart-modal-close]');

      // Open cart modal
      if (cartModalToggle) {
        cartModalToggle.addEventListener('click', function(e) {
          e.preventDefault();
          cartModal.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      }

      // Close cart modal
      cartModalClose.forEach(function(closeBtn) {
        closeBtn.addEventListener('click', function() {
          cartModal.classList.remove('active');
          document.body.style.overflow = '';
        });
      });

      // Close modal on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && cartModal.classList.contains('active')) {
          cartModal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });

      // Handle quantity changes
      document.addEventListener('click', function(e) {
        if (e.target.matches('[data-quantity-plus]')) {
          const itemKey = e.target.getAttribute('data-item-key');
          updateCartItemQuantity(itemKey, 1);
        }
        if (e.target.matches('[data-quantity-minus]')) {
          const itemKey = e.target.getAttribute('data-item-key');
          updateCartItemQuantity(itemKey, -1);
        }
        if (e.target.matches('[data-remove-item]')) {
          const itemKey = e.target.getAttribute('data-item-key');
          removeCartItem(itemKey);
        }
      });

      // Function to update cart item quantity
      function updateCartItemQuantity(itemKey, change) {
        const quantityElement = document.querySelector(`[data-cart-item="${itemKey}"] .quantity-value`);
        const currentQuantity = parseInt(quantityElement.textContent);
        const newQuantity = currentQuantity + change;
        
        if (newQuantity < 1) return;
        
        // Show loading state
        quantityElement.textContent = '...';
        
        // Update cart via Shopify API
        fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: itemKey,
            quantity: newQuantity
          })
        })
        .then(response => response.json())
        .then(cart => {
          // Update quantity display
          quantityElement.textContent = newQuantity;
          
          // Update cart count
          updateCartCount();
          
          // Update cart modal content
          updateCartModal(cart);
        })
        .catch(error => {
          console.error('Error updating quantity:', error);
          quantityElement.textContent = currentQuantity;
        });
      }

      // Function to remove cart item
      function removeCartItem(itemKey) {
        const cartItem = document.querySelector(`[data-cart-item="${itemKey}"]`);
        
        // Show loading state
        cartItem.style.opacity = '0.5';
        
        // Remove item via Shopify API
        fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: itemKey,
            quantity: 0
          })
        })
        .then(response => response.json())
        .then(cart => {
          // Remove item from DOM
          cartItem.remove();
          
          // Update cart count
          updateCartCount();
          
          // Update cart modal content
          updateCartModal(cart);
        })
        .catch(error => {
          console.error('Error removing item:', error);
          cartItem.style.opacity = '1';
        });
      }

      // Function to update cart modal content
      function updateCartModal(cart) {
        if (cart.item_count === 0) {
          // Show empty cart state
          const cartBody = document.querySelector('.cart-modal__body');
          cartBody.innerHTML = `
