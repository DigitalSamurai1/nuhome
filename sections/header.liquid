<!-- Top Announcement Bar -->
<div class="announcement-bar" data-announcement-bar>
  <div class="container">
    <div class="announcement-bar__content">
      <i
        data-lucide="package"
        class="announcement-bar__icon"
        aria-hidden="true"></i>
      <span class="announcement-bar__text">{{ section.settings.announcement_text }}</span>
      <i
        data-lucide="truck"
        class="announcement-bar__icon"
        aria-hidden="true"></i>
      <button
        class="announcement-bar__close"
        type="button"
        aria-label="Close"
        data-announcement-close>×</button>
    </div>
  </div>
</div>

<!-- Main Header -->
<header
  class="header"
  data-section-id="{{ section.id }}"
  data-section-type="header">
  <div class="container">
    <div class="header__content">
      <!-- Left: Support Box -->
      <div class="header__support">
        <div class="support-box">
          <i
            data-lucide="headphones"
            class="support-box__icon"
            aria-hidden="true"></i>
          <div class="support-box__content">
            <div class="support-box__label">Customer Support</div>
            <button class="support-box__claim-btn" data-claim-modal-toggle>
              Submit Claim
            </button>
          </div>
        </div>
      </div>

      <!-- Center: Logo -->
      <div class="header__logo">
        {% if section.settings.logo != blank %}
          <a href="/" class="header__logo-link">
            <img
              src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
              alt="{{ shop.name }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio | round }}"
              loading="eager">
          </a>
        {% else %}
          <a href="/" class="header__logo-text">
            NüH❄️me
          </a>
        {% endif %}
      </div>

      <!-- Right: Header Actions -->
      <div class="header__actions">
        <!-- Search -->
        <button
          class="header__action-btn"
          data-search-toggle
          aria-label="Toggle search"
          aria-expanded="false">
          <i
            data-lucide="search"
            class="header__action-icon"
            aria-hidden="true"></i>
        </button>

        <!-- Account -->
        <a
          href="/account"
          class="header__action-btn"
          aria-label="Account">
          <i
            data-lucide="user"
            class="header__action-icon"
            aria-hidden="true"></i>
        </a>

        <!-- Cart -->
        <button
          class="header__action-btn header__cart-btn"
          data-cart-modal-toggle
          aria-label="Cart">
          <i
            data-lucide="shopping-cart"
            class="header__action-icon"
            aria-hidden="true"></i>
          <span class="header__cart-count" data-cart-count>
            {% if cart.item_count > 0 %}
              {{ cart.item_count }}
            {% endif %}
          </span>
        </button>
      </div>

      <!-- Mobile Menu Toggle -->
      <button
        class="header__mobile-toggle"
        data-mobile-menu-toggle
        aria-label="Toggle mobile menu"
        aria-expanded="false">
        <span class="header__mobile-toggle-line"></span>
