  <!-- Claim Modal -->
  <div class="claim-modal" data-claim-modal>
    <div class="claim-modal__overlay" data-claim-modal-close></div>
    <div class="claim-modal__content">
      <div class="claim-modal__header">
        <h3 class="claim-modal__title">Submit Customer Claim</h3>
        <button
          class="claim-modal__close"
          data-claim-modal-close
          aria-label="Close">
          <i data-lucide="x" class="claim-modal__close-icon"></i>
        </button>
      </div>

      <form
        class="claim-form"
        action="/contact"
        method="post"
        data-claim-form>
        <input
          type="hidden"
          name="form_type"
          value="contact">
        <input
          type="hidden"
          name="utf8"
          value="✓">
        <input
          type="hidden"
          name="contact[email]"
          value="bmaxsocialmedia20@gmail.com">
        <input
          type="hidden"
          name="contact[subject]"
          value="Customer Claim - NüHome">

        <div class="claim-form__field">
          <label for="claim-name" class="claim-form__label">Full Name *</label>
          <input
            type="text"
            id="claim-name"
            name="contact[name]"
            class="claim-form__input"
            required
            placeholder="Enter your full name">
        </div>

        <div class="claim-form__field">
          <label for="claim-email" class="claim-form__label">Email Address *</label>
          <input
            type="email"
            id="claim-email"
            name="contact[email_customer]"
            class="claim-form__input"
            required
            placeholder="Enter your email address">
        </div>

        <div class="claim-form__field">
          <label for="claim-order" class="claim-form__label">Order Number (if applicable)</label>
          <input
            type="text"
            id="claim-order"
            name="contact[order_number]"
            class="claim-form__input"
            placeholder="Enter order number">
        </div>

        <div class="claim-form__field">
          <label for="claim-product" class="claim-form__label">Product Name</label>
          <input
            type="text"
            id="claim-product"
            name="contact[product_name]"
            class="claim-form__input"
            placeholder="Enter product name">
        </div>

        <div class="claim-form__field">
          <label for="claim-type" class="claim-form__label">Claim Type *</label>
          <select
            id="claim-type"
            name="contact[claim_type]"
            class="claim-form__select"
            required>
            <option value="">Select claim type</option>
            <option value="defective_product">Defective Product</option>
            <option value="wrong_item">Wrong Item Received</option>
            <option value="damaged_delivery">Damaged During Delivery</option>
            <option value="missing_parts">Missing Parts</option>
            <option value="warranty_claim">Warranty Claim</option>
            <option value="refund_request">Refund Request</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="claim-form__field">
          <label for="claim-description" class="claim-form__label">Description *</label>
          <textarea
            id="claim-description"
            name="contact[body]"
            class="claim-form__textarea"
            rows="4"
            required
            placeholder="Please describe your claim in detail..."></textarea>
        </div>

        <div class="claim-form__actions">
          <button
            type="button"
            class="claim-form__btn claim-form__btn--secondary"
            data-claim-modal-close>
            Cancel
          </button>
          <button type="submit" class="claim-form__btn claim-form__btn--primary">
            <span class="claim-form__btn-text">Submit Claim</span>
            <span class="claim-form__btn-loading" style="display: none;">
              <i data-lucide="loader-2" class="claim-form__loading-icon"></i>
              Sending...
            </span>
          </button>
        </div>
      </form>
    </div>
