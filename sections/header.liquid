  <!-- Cart Modal -->
  <div class="cart-modal" data-cart-modal>
    <div class="cart-modal__overlay" data-cart-modal-close></div>
    <div class="cart-modal__content">
      <div class="cart-modal__header">
        <h3 class="cart-modal__title">Shopping Cart</h3>
        <button
          class="cart-modal__close"
          data-cart-modal-close
          aria-label="Close">
          <i data-lucide="x" class="cart-modal__close-icon"></i>
        </button>
      </div>

      <div class="cart-modal__body">
        {% if cart.item_count > 0 %}
          <!-- Cart Items -->
          <div class="cart-items" data-cart-items>
            {% for item in cart.items %}
              <div class="cart-item" data-cart-item="{{ item.key }}">
                <div class="cart-item__image">
                  <img
                    src="{{ item.image | image_url: width: 80, height: 80, crop: 'center' }}"
                    alt="{{ item.title }}"
                    loading="lazy"
                    width="80"
                    height="80">
                </div>

                <div class="cart-item__details">
                  <div class="cart-item__title">{{ item.product.title }}</div>
                  {% if item.variant.title != 'Default Title' %}
                    <div class="cart-item__variant">{{ item.variant.title }}</div>
                  {% endif %}
                  <div class="cart-item__price">{{ item.final_price | money }}</div>

                  <div class="cart-item__quantity">
                    <button
                      class="quantity-btn quantity-btn--minus"
                      data-quantity-minus
                      data-item-key="{{ item.key }}">
                      <i data-lucide="minus" class="quantity-icon"></i>
                    </button>
                    <span class="quantity-value">{{ item.quantity }}</span>
                    <button
                      class="quantity-btn quantity-btn--plus"
                      data-quantity-plus
                      data-item-key="{{ item.key }}">
                      <i data-lucide="plus" class="quantity-icon"></i>
                    </button>
                  </div>
                </div>

                <button
                  class="cart-item__remove"
                  data-remove-item
                  data-item-key="{{ item.key }}">
                  <i data-lucide="trash-2" class="remove-icon"></i>
                </button>
              </div>
            {% endfor %}
          </div>

          <!-- Cart Summary -->
          <div class="cart-summary">
            <div class="cart-summary__row">
              <span>Subtotal</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
            {% if cart.total_discounts > 0 %}
              <div class="cart-summary__row cart-summary__row--discount">
                <span>Discounts</span>
                <span>-{{ cart.total_discounts | money }}</span>
              </div>
            {% endif %}
            <div class="cart-summary__row cart-summary__row--total">
              <span>Total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
          </div>

          <!-- Cart Actions -->
          <div class="cart-actions">
            <a href="/cart" class="cart-btn cart-btn--secondary">View Cart</a>
            <a href="/checkout" class="cart-btn cart-btn--primary">Checkout</a>
          </div>
        {% else %}
          <!-- Empty Cart -->
          <div class="cart-empty">
            <div class="cart-empty__icon">
              <i data-lucide="shopping-cart" class="empty-cart-icon"></i>
            </div>
            <h4 class="cart-empty__title">Your cart is empty</h4>
            <p class="cart-empty__message">Looks like you haven't added any items to your cart yet.</p>
            <a href="/collections/bestsellers" class="cart-btn cart-btn--primary">Start Shopping</a>
          </div>
        {% endif %}
