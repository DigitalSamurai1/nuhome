{% comment %}
  Hero section for NüHome theme
  Features: Dynamic carousel with product images, headline, subheading, CTA button
{% endcomment %}

<section
  class="hero"
  data-section-id="{{ section.id }}"
  data-section-type="hero">

  <!-- Hero Carousel -->
  <div class="hero__carousel" data-hero-carousel>
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="hero__slide" data-slide="{{ forloop.index0 }}">
          <div class="hero__slide-background">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 1920 }}"
                alt="{{ block.settings.image.alt | escape }}"
                class="hero__slide-image"
                width="1920"
                height="1080"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}">
            {% endif %}
            {% if block.settings.overlay_opacity > 0 %}
              <div class="hero__slide-overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
            {% endif %}
          </div>

          <div class="hero__slide-content">
            <div class="hero__slide-text">
              {% if block.settings.heading != blank %}
                <h2 class="hero__slide-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.subheading != blank %}
                <p class="hero__slide-subheading">{{ block.settings.subheading }}</p>
              {% endif %}
              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <div class="hero__slide-cta">
                  <a href="{{ block.settings.button_link }}" class="btn btn-primary btn-large">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Carousel Navigation -->
  {% if section.settings.show_navigation %}
    <div class="hero__carousel-nav">
      <button
        class="hero__nav-btn hero__nav-btn--prev"
        data-carousel-prev
        aria-label="Previous slide">
        <i data-lucide="chevron-left" class="hero__nav-icon"></i>
      </button>
      <button
        class="hero__nav-btn hero__nav-btn--next"
        data-carousel-next
        aria-label="Next slide">
        <i data-lucide="chevron-right" class="hero__nav-icon"></i>
      </button>
    </div>
  {% endif %}

  <!-- Carousel Indicators -->
  {% if section.settings.show_indicators %}
    <div class="hero__carousel-indicators" data-carousel-indicators>
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <button
            class="hero__indicator{% if forloop.first %} hero__indicator--active{% endif %}"
            data-carousel-indicator="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  <!-- Fallback Content (when no slides are added) -->
  {% if section.blocks.size == 0 %}
    <div class="container">
      <div class="hero__content">
        <div class="hero__text">
          <h1 class="hero__heading">
            <span class="hero__heading-text">{{ section.settings.heading }}</span>
            <span class="hero__snowflakes" aria-hidden="true">
              <i data-lucide="snowflake" style="width:18px;height:18px"></i>
              <i data-lucide="sparkles" style="width:18px;height:18px;margin:0 6px"></i>
              <i data-lucide="snowflake" style="width:18px;height:18px"></i>
            </span>
          </h1>
          <p class="hero__subheading">{{ section.settings.subheading }}</p>
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div class="hero__cta">
              <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-large">
                {{ section.settings.button_label }}
              </a>
            </div>
          {% endif %}
          {% if section.settings.show_tagline_overlay %}
            <p class="hero__brand-tagline">{{ section.settings.tagline_overlay_text }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

