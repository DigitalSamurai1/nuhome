{% comment %}
  Hero section for NüHome theme
  Features: Headline, subheading, CTA button, background image
{% endcomment %}

<section class="hero" data-section-id="{{ section.id }}" data-section-type="hero">
  <div class="hero__background">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | escape }}"
        class="hero__background-image"
        loading="eager">
      {% if section.settings.image_overlay_opacity > 0 %}
        <div 
          class="hero__overlay"
          style="opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};">
        </div>
      {% endif %}
    {% endif %}
  </div>

  <div class="container">
    <div class="hero__content">
      <div class="hero__text">
        {% if section.settings.heading != blank %}
          <h1 class="hero__heading">
            {{ section.settings.heading }}
          </h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="hero__subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <div class="hero__cta">
            <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-large">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to NüHome — Elevate your everyday"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium kitchen appliances designed for wellness and efficiency"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "%",
      "label": "Image overlay opacity"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "background-3",
          "label": "Background 3"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

<style>
.hero {
  position: relative;
  min-height: 80vh;
  display: flex;
  align-items: center;
  overflow: hidden;
  background: linear-gradient(135deg, var(--color-background-secondary) 0%, var(--color-background-tertiary) 100%);
}

.hero__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero__background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--color-text-primary);
}

.hero__content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
  padding: var(--spacing-3xl) 0;
}

.hero__text {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: var(--spacing-2xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
}

.hero__heading {
  font-size: var(--font-size-5xl);
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-lg);
  line-height: 1.1;
}

.hero__subheading {
  font-size: var(--font-size-xl);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xl);
  line-height: 1.5;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.hero__cta {
  margin-top: var(--spacing-xl);
}

.hero__cta .btn {
  font-size: var(--font-size-lg);
  padding: var(--spacing-md) var(--spacing-2xl);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

@media (max-width: 768px) {
  .hero {
    min-height: 70vh;
  }
  
  .hero__content {
    padding: var(--spacing-xl) 0;
  }
  
  .hero__text {
    padding: var(--spacing-xl);
    margin: 0 var(--spacing-md);
  }
  
  .hero__heading {
    font-size: var(--font-size-3xl);
  }
  
  .hero__subheading {
    font-size: var(--font-size-lg);
  }
}

@media (max-width: 480px) {
  .hero {
    min-height: 60vh;
  }
  
  .hero__text {
    padding: var(--spacing-lg);
    margin: 0 var(--spacing-sm);
  }
  
  .hero__heading {
    font-size: var(--font-size-2xl);
  }
  
  .hero__subheading {
    font-size: var(--font-size-base);
  }
  
  .hero__cta .btn {
    font-size: var(--font-size-base);
    padding: var(--spacing-sm) var(--spacing-xl);
  }
}
</style>
