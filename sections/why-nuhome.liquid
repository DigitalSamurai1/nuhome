<style>
.why-nuhome {
  position: relative;
  padding: 100px 0;
  background: white;
  overflow: hidden;
}

/* Background Pattern */
.why-nuhome__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.why-nuhome__pattern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 30%, rgba(74, 144, 226, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(135, 206, 235, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 40% 90%, rgba(176, 230, 255, 0.05) 0%, transparent 50%);
}

/* Header */
.why-nuhome__header {
  position: relative;
  z-index: 2;
  margin-bottom: 80px;
  text-align: center;
}

.why-nuhome__title {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 20px;
  line-height: 1.1;
}

.why-nuhome__title-text {
  background: linear-gradient(135deg, #4A90E2 0%, #2171B5 30%, #87CEEB 70%, #B8E6FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: inline-block;
  animation: text-shimmer 3s ease-in-out infinite;
}

.why-nuhome__title-accent {
  display: inline-block;
  margin-left: 12px;
  font-size: 2.5rem;
  animation: bounce-sparkles 2s ease-in-out infinite;
}

.why-nuhome__subtitle {
  font-size: 1.25rem;
  color: #4A90E2;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
  font-weight: 500;
  text-shadow: 0 2px 4px rgba(74, 144, 226, 0.1);
}

/* Features Grid */
.why-nuhome__features {
  position: relative;
  z-index: 2;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto 80px;
}

.why-nuhome__feature {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15px);
  border-radius: 24px;
  padding: 40px 32px;
  text-align: center;
  border: 2px solid rgba(135, 206, 235, 0.2);
  box-shadow: 0 8px 32px rgba(74, 144, 226, 0.15);
  transition: all 0.4s ease;
  overflow: hidden;
}

.why-nuhome__feature::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
  z-index: 1;
}

.why-nuhome__feature:hover {
  transform: translateY(-12px);
  box-shadow: 0 20px 60px rgba(74, 144, 226, 0.25);
  border-color: rgba(135, 206, 235, 0.4);
}

.why-nuhome__feature:hover::before {
  left: 100%;
}

/* Featured Card (middle one) */
.why-nuhome__feature--featured {
  transform: scale(1.05);
  border-color: rgba(74, 144, 226, 0.3);
  box-shadow: 0 12px 40px rgba(74, 144, 226, 0.2);
}

.why-nuhome__feature--featured:hover {
  transform: scale(1.05) translateY(-12px);
}

.why-nuhome__feature-highlight {
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #FFD93D 0%, #FF6B6B 100%);
  color: white;
  padding: 6px 20px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  z-index: 3;
}

/* Feature Header */
.why-nuhome__feature-header {
  position: relative;
  z-index: 2;
  margin-bottom: 24px;
}

.why-nuhome__feature-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 16px;
  background: linear-gradient(135deg, #4A90E2 0%, #87CEEB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.why-nuhome__feature:hover .why-nuhome__feature-icon {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 12px 35px rgba(74, 144, 226, 0.4);
}

.why-nuhome__feature-emoji {
  font-size: 36px;
  display: block;
  animation: float-icon 3s ease-in-out infinite;
}

.why-nuhome__feature-badge {
  display: inline-block;
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border: 1px solid rgba(74, 144, 226, 0.2);
}

/* Feature Content */
.why-nuhome__feature-content {
  position: relative;
  z-index: 2;
}

.why-nuhome__feature-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #222;
  margin-bottom: 16px;
  line-height: 1.3;
}

.why-nuhome__feature-text {
  font-size: 16px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20px;
}

/* Feature Benefits */
.why-nuhome__feature-benefits {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: left;
}

.why-nuhome__feature-benefit {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #555;
  margin-bottom: 8px;
  font-weight: 500;
}

.why-nuhome__benefit-icon {
  font-size: 12px;
  color: #4A90E2;
  flex-shrink: 0;
}

/* Bottom Stats */
.why-nuhome__stats {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
  gap: 60px;
  margin-bottom: 60px;
  flex-wrap: wrap;
}

.why-nuhome__stat {
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 24px 32px;
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8px 25px rgba(74, 144, 226, 0.1);
  transition: transform 0.3s ease;
  min-width: 140px;
}

.why-nuhome__stat:hover {
  transform: translateY(-5px);
}

.why-nuhome__stat-number {
  font-size: 2rem;
  font-weight: 800;
  background: linear-gradient(135deg, #4A90E2 0%, #87CEEB 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
  display: block;
}

.why-nuhome__stat-label {
  font-size: 14px;
  color: #666;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Call to Action */
.why-nuhome__cta {
  position: relative;
  z-index: 2;
}

.why-nuhome__cta-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  background: linear-gradient(135deg, #4A90E2 0%, #2171B5 100%);
  color: white;
  padding: 18px 36px;
  border-radius: 16px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.125rem;
  box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.why-nuhome__cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.why-nuhome__cta-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(74, 144, 226, 0.4);
  background: linear-gradient(135deg, #2171B5 0%, #4A90E2 100%);
}

.why-nuhome__cta-button:hover::before {
  left: 100%;
}

.why-nuhome__cta-icon {
  font-size: 18px;
  transition: transform 0.3s ease;
}

.why-nuhome__cta-button:hover .why-nuhome__cta-icon {
  transform: scale(1.2) rotate(20deg);
}

.why-nuhome__cta-subtext {
  margin-top: 12px;
  font-size: 14px;
  color: #4A90E2;
  font-weight: 500;
}

/* Animations */
@keyframes text-shimmer {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.2); }
}

@keyframes bounce-sparkles {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.1) rotate(10deg); }
}

@keyframes float-icon {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

