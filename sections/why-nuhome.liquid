      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="why-nuhome__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <!-- Features Grid -->
    <div class="why-nuhome__features">
      <div class="why-nuhome__feature" data-aos="fade-up" data-aos-delay="0">
        <div class="why-nuhome__feature-header">
          <div class="why-nuhome__feature-icon">
            <span class="why-nuhome__feature-emoji">{{ section.settings.feature_1_icon | default: '‚ùÑÔ∏è' }}</span>
          </div>
          <div class="why-nuhome__feature-badge">{{ section.settings.feature_1_badge | default: 'Premium' }}</div>
        </div>
