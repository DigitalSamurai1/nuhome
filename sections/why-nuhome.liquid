{% comment %}
  Why NüHome section for NüHome theme
  Features: Three value propositions with icons and descriptions
{% endcomment %}

<section class="why-nuhome" data-section-id="{{ section.id }}" data-section-type="why-nuhome">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="why-nuhome__header text-center">
        <h2 class="why-nuhome__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="why-nuhome__features">
      <div class="why-nuhome__feature">
        <div class="why-nuhome__feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4L29.09 16.26L42 17.27L32 26.14L35.18 38.02L24 31.77L12.82 38.02L16 26.14L6 17.27L18.91 16.26L24 4Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="why-nuhome__feature-content">
          <h3 class="why-nuhome__feature-title">{{ section.settings.feature_1_title }}</h3>
          <p class="why-nuhome__feature-text">{{ section.settings.feature_1_text }}</p>
        </div>
      </div>

      <div class="why-nuhome__feature">
        <div class="why-nuhome__feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4C12.95 4 4 12.95 4 24C4 35.05 12.95 44 24 44C35.05 44 44 35.05 44 24C44 12.95 35.05 4 24 4ZM20 34L10 24L12.83 21.17L20 28.34L35.17 13.17L38 16L20 34Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="why-nuhome__feature-content">
          <h3 class="why-nuhome__feature-title">{{ section.settings.feature_2_title }}</h3>
          <p class="why-nuhome__feature-text">{{ section.settings.feature_2_text }}</p>
        </div>
      </div>

      <div class="why-nuhome__feature">
        <div class="why-nuhome__feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4L26.34 10.34L33 12.68L26.34 15.02L24 21.36L21.66 15.02L15 12.68L21.66 10.34L24 4ZM24 26.64L26.34 33L33 35.34L26.34 37.68L24 44.02L21.66 37.68L15 35.34L21.66 33L24 26.64Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="why-nuhome__feature-content">
          <h3 class="why-nuhome__feature-title">{{ section.settings.feature_3_title }}</h3>
          <p class="why-nuhome__feature-text">{{ section.settings.feature_3_text }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why NüHome",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose NüHome?"
    },
    {
      "type": "text",
      "id": "feature_1_title",
      "label": "Feature 1 Title",
      "default": "Smart Design"
    },
    {
      "type": "textarea",
      "id": "feature_1_text",
      "label": "Feature 1 Text",
      "default": "Thoughtfully crafted for modern kitchens"
    },
    {
      "type": "text",
      "id": "feature_2_title",
      "label": "Feature 2 Title",
      "default": "Wellness First"
    },
    {
      "type": "textarea",
      "id": "feature_2_text",
      "label": "Feature 2 Text",
      "default": "Health-focused appliances for better living"
    },
    {
      "type": "text",
      "id": "feature_3_title",
      "label": "Feature 3 Title",
      "default": "Reliable Shipping"
    },
    {
      "type": "textarea",
      "id": "feature_3_text",
      "label": "Feature 3 Text",
      "default": "Fast, secure delivery to your door"
    }
  ],
  "presets": [
    {
      "name": "Why NüHome"
    }
  ]
}
{% endschema %}

<style>
.why-nuhome {
  padding: var(--spacing-3xl) 0;
  background: var(--color-white);
}

.why-nuhome__header {
  margin-bottom: var(--spacing-3xl);
}

.why-nuhome__title {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-lg);
}

.why-nuhome__features {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-2xl);
  max-width: 1000px;
  margin: 0 auto;
}

.why-nuhome__feature {
  text-align: center;
  padding: var(--spacing-xl);
  background: var(--color-background);
  border-radius: var(--radius-xl);
  transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.why-nuhome__feature:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.why-nuhome__feature-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto var(--spacing-lg);
  background: var(--color-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-white);
}

.why-nuhome__feature-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.why-nuhome__feature-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  line-height: 1.6;
}

@media (max-width: 768px) {
  .why-nuhome {
    padding: var(--spacing-2xl) 0;
  }
  
  .why-nuhome__features {
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  .why-nuhome__title {
    font-size: var(--font-size-3xl);
  }
  
  .why-nuhome__feature {
    padding: var(--spacing-lg);
  }
  
  .why-nuhome__feature-icon {
    width: 60px;
    height: 60px;
  }
  
  .why-nuhome__feature-title {
    font-size: var(--font-size-lg);
  }
}

@media (max-width: 480px) {
  .why-nuhome__title {
    font-size: var(--font-size-2xl);
  }
  
  .why-nuhome__feature {
    padding: var(--spacing-md);
  }
}
</style>
