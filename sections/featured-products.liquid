{% comment %}
  Featured Products section for NÃ¼Home theme
  Features: Product grid, taglines from metafields, add to cart functionality
{% endcomment %}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  assign columns_desktop = section.settings.columns_desktop
-%}

<section class="featured-products" data-section-id="{{ section.id }}" data-section-type="featured-products">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="featured-products__header text-center">
        <h2 class="featured-products__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if collection != blank and collection.products.size > 0 %}
      <div class="featured-products__grid grid grid-{{ columns_desktop }}">
        {% for product in collection.products limit: products_to_show %}
          <div class="featured-products__item">
            {% render 'product-card', 
              product: product,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating %}
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all and collection.all_products_count > products_to_show %}
        <div class="featured-products__footer text-center">
          <a href="{{ collection.url }}" class="btn btn-secondary">
            View All {{ collection.title }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="featured-products__empty text-center">
        <p>{{ 'sections.featured_products.empty' | t }}</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "default": "frontpage"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Show secondary image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show product vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show product rating"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' button"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "background-3",
          "label": "Background 3"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<style>
.featured-products {
  padding: var(--spacing-3xl) 0;
  background: var(--color-background-secondary);
}

.featured-products__header {
  margin-bottom: var(--spacing-3xl);
}

.featured-products__title {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-lg);
}

.featured-products__grid {
  margin-bottom: var(--spacing-2xl);
}

.featured-products__item {
  display: flex;
}

.featured-products__footer {
  margin-top: var(--spacing-2xl);
}

.featured-products__empty {
  padding: var(--spacing-2xl);
  color: var(--color-text-secondary);
}

@media (max-width: 768px) {
  .featured-products {
    padding: var(--spacing-2xl) 0;
  }
  
  .featured-products__title {
    font-size: var(--font-size-3xl);
  }
}

@media (max-width: 480px) {
  .featured-products__title {
    font-size: var(--font-size-2xl);
  }
}
</style>
